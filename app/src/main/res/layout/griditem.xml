<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="@dimen/griditem_width_size"
        android:layout_height="@dimen/griditem_height_size"
        android:layout_margin="2dp"
      
        android:background="@drawable/grid_item_bg_bd"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bottom_space"
        android:paddingTop="@dimen/top_space" >

        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="@dimen/category_icon_size"
            android:layout_height="@dimen/category_icon_size"
            android:layout_gravity="center|top"
            android:layout_marginLeft="@dimen/griditem_icon_gap"
            android:layout_marginRight="@dimen/griditem_icon_gap"
            android:gravity="center_horizontal"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/category_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/griditemtitleColor"
            android:textSize="12sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/category_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/griditemtitleColor"
            android:textSize="9px" >
        </TextView>
    </LinearLayout>

</FrameLayout>